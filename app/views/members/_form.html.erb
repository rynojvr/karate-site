<%= form_with(model: [@club, member], local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="offset-bottom">
    <legend>Member Info</legend>
    <div class="row">
      <div class="col-sm-6">

        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, id: :member_first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, id: :member_last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :date_of_birth %>
          <%= form.date_select :date_of_birth, id: :member_date_of_birth, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :avatar %>
          <%= form.file_field :avatar, id: :member_avatar, class: 'form-control' %>
          <% if form.object.avatar? %>
            <%= image_tag form.object.avatar.url %>
            <%= form.label :remove_image %>
            <%= form.check_box :remove_avatar %>
          <% end %>
        </div>
        <div class="form-group">
          <%= form.label :race %>
          <%= form.text_field :race, id: :member_race, class: 'form-control' %>
        </div>

      </div>
      <div class="col-sm-6">

        <div class="form-group">
          <%= form.label :residential_address %>
          <%= form.text_field :residential_address, id: :member_residential_address, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :code %>
          <%= form.text_field :code, id: :member_code, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :cell_number %>
          <%= form.text_field :cell_number, id: :member_cell_number, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, id: :member_email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :current_weight %>
          <%= form.number_field :current_weight, id: :member_current_weight, class: 'form-control' %>
        </div>
      </div>
    </div> <!-- .row -->
  </fieldset>
  <fieldset class="offset-bottom">
    <legend>Other stuffs</legend>

    <div class="form-group">
      <%= form.label :current_height %>
      <%= form.number_field :current_height, id: :member_current_height, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :belt %>
      <%= form.select(:belt, belt_options, {}, {id: :member_belt, class: 'form-control'}) %>
    </div>

    <div class="form-group">
      <%= form.label :is_affiliated %>
      <%= form.check_box :is_affiliated, id: :member_is_affiliated, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </fieldset>
<% end %>
