<div class="section-content">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 offset-bottom">
        <%= link_to new_member_path, class: 'btn btn-warning btn-raised' do %>
          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
          New Member
        <% end %>
      </div>
      <div class="col-xs-4 offset-bottom pull-right orrset-right">
        <div class="btn-group pull-right">
          <%= link_to '#', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
          <% end %>
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><a href="#">Action</a></li>
            <li><a href="#">Other action</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated Link</a></li>
          </ul>
        </div>
      </div>
    </div><!-- .row -->
    <div class="table-responsive table-responsive-dropdowns">
      <table class="table table-hover">
    <thead>
      <tr>
        <th class="table-cell-id">#</th>
        <!-- <th data-toggle="sort" data-sort-onload="asc" class="col-sm-3" tabindex="0">Date</th> -->
        <th data-toggle="sort" class="col-sm-3" tabindex="0">Name</th>
        <th data-toggle="sort" class="col-sm-2" tabindex="0">Belt</th>
        <th data-toggle="sort" class="col-sm-3 text-right" tabindex="0">Race</th>
        <th data-toggle="sort" class="col-sm-2 text-center">Age</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @members.each_with_index do |member, index| %>
        <tr>
          <td class="table-cell-id">
            <%= member.id %>
          </td>
          <td>
            <%= link_to member_path(member), class: 'text-nowrap' do %>
              <%= member.first_name %>
              <%= member.last_name %>
            <% end %>
          </td>
          <td>
            <div class="small text-nowrap">
              <%= member.belt %>
            </div>
          </td>
          <td class="text-right">
            <%= member.race %>
          </td>
          <td class="text-center">
            <%= member.age %>
          </td>
          <td class="table-cell-actions">
            <%= link_to edit_member_path(member), class: 'item-action', title: 'Edit' do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <a href="#" class="item-action" title="Mark as delivered">
              <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
            </a>
            <div class="btn-group">
              <button class="item-action" type="button" id="itemOptions<%= index %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="itemOptions<%= index %>">
                <li>
                  <%= link_to member_path(member), data: {
                    'toggle' => 'confirm',
                    'confirm-message' => "Do you really want to remove this member?",
                    'confirm-yes' => "Yes",
                    'confirm-no' => "No"
                  }, method: :delete do %>

                    <span class="glyphicon glyphicon-remove-sign offset-right" aria-hidden="true"></span>
                    Remove member
                  <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
