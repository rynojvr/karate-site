<%= render 'partials/headline',
    headline: @club.name,
    page_name: 'members',
    current_tab: '' %>


<div class="section-content">
  <div class="container">



    <p id="notice"><%= notice %></p>
<%= render_breadcrumbs %>
<section class="sectoin-header section-header-condensed">
  <div class="row">
    <div class="container col-xs-12">

    </div>
  </div>
  <div class="row">
    <div class="container col-xs-9">
      <h1 class="section-header-title">Member Profile</h1>
      <!-- <h2 class="secltion-header-subtitle">Club Name</h2> -->
    </div><!-- .container -->
    <div class="container col-xs-2 pull-right">
      <div class="offset-bottom pull-right">
        <div class="btn-group">
          <%= link_to club_member_path(@club, @member, format: :pdf), class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
          <% end %>
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><%= link_to 'Edit', edit_club_member_path(@club, @member) %></li>
            <li><a href="#">Action</a></li>
            <li><a href="#">Other action</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated Link</a></li>
          </ul>
        </div>
      </div>
    </div><!-- .container -->
  </div><!-- .row -->
</section>
<section class="section-content">
  <div class="container">
    <div class="row offset-bottom">
      <h4>Member Image:</h4>
      <% if not @member.avatar.url.nil? %>
        <%= image_tag @member.avatar.url, size: 140 %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-sm-5">
        <h4>First name:</h4>
        <p>
          <%= @member.first_name %>
        </p>
      </div>
      <div class="col-sm-7">
        <h4>Last name:</h4>
        <p>
          <%= @member.last_name %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h4>Residential Address:</h4>
        <p>
          <%= @member.residential_address %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <h4>Code:</h4>
        <p>
          <%= @member.code %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5">
        <h4>Cell Number:</h4>
        <p>
          <%= @member.cell_number %>
        </p>
      </div>
      <div class="col-sm-7">
        <h4>Email:</h4>
        <p>
          <%= @member.email %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5">
        <h4>Current Weight:</h4>
        <p>
          <%= @member.current_weight || 'N/A' %>
        </p>
      </div>
      <div class="col-sm-7">
        <h4>Current Height:</h4>
        <p>
          <%= @member.current_height || 'N/A' %>
        </p>
      </div>
    </div>
    <div class="row divider">
    </div>
    <div class="row">
      <div class="col-sm-7">
        <h4>Club Name:</h4>
        <p>
          <%= @club.name %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5">
        <h4>Club Cell:</h4>
        <p>
          <%= @club.cell %>
        </p>
      </div>
      <div class="col-sm-7">
        <h4>Email:</h4>
        <p>
          <%= @club.email %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-7">
        <h4>Sensei Name:</h4>
        <p>
          <%= @club.sensei %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class = "col-sm-7">
        <h4>District</h4>
        <p>
          District goes HERE
        </p>
      </div>
    </div>
  </div>

</div>
</section>
</div>
</div>
